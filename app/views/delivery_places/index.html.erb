<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="head-line text-center title_h2">配送先登録/一覧</h2>
        <%= form_with model: @delivery_place, url: delivery_places_path, local:true do |f| %>
          <div class="col-10">
            <div class="form-group col-12">
              <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-3 control-label" %>
              <%= f.text_field :postcode, class: "col-3 form-control-static" %>
            </div>
            <div class="form-group col-12">
              <%= f.label :"住所" ,class: "col-3 control-label" %>
              <%= f.text_field :address, class: "col-7 form-control-static" %>
            </div>
            <div class="form-group col-12">
              <%= f.label :"宛名" ,class: "col-3 control-label" %>
              <%= f.text_field :addressee, class: "col-3 form-control-static" %>
              <div class="text-right ml-auto">
                <%= f.submit '新規登録' ,class: "col-md-offset-4 col-2 btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <% if @delivery_places.present? %>
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @delivery_places.each do |delivery_place| %>
              <tr>
                <td>
                  <%= delivery_place.postcode %>
                </td>
                <td class="text-left">
                  <%= delivery_place.address %>
                </td>
                <td class="text-left">
                  <%= delivery_place.addressee %>
                </td>
                <td>
                  <%= link_to "編集する", edit_delivery_place_path(delivery_place), class: "btn-sm btn-primary" %>
                </td>
                <td>
                  <%= link_to "削除する", delivery_place_path(delivery_place), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>