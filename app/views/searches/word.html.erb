<div class="header">
  <%= render "layouts/header" %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'genres/index', genres: @genres %>
    </div>
    <div class="col-md-9 offset-md-1">
      <h2 class="mr-2">"<%= @value %>" の検索結果 <small class="text-muted">(全<%= @items.count %>件)</small></h2>
      <%= render 'search', items: @items %>
    </div>
  </div>
</div>