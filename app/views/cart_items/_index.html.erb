<h4>ショッピングカート</h4>
<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
<table class="table table-bordered">
  <thead>
    <tr class="cart-thead">
      <th class="cart-name">商品名</th>
      <th class="cart-price">単価(税込)</th>
      <th class="cart-count">数量</th>
      <th class="cart-total">小計</th>
      <th class="cart-destroy"></th>
    </tr>
  </thead>
  <% cart_items.each do |cart| %>
    <tbody>
      <td><%= cart.item.name %></td>
      <td><%= cart.item.price %></td>
      <td>
        <%= form_with model: cart, local: true do |f| %>
          <div class="row">
            <div class="form-group">
              <%= f.select :count, [["1個", 1], ["2個", 2], ["3個", 3], ["4個", 4], ["5個", 5]] %>
            </div>
            <div class="form-group">
              <%= f.submit "変更", class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
      </td>
      <td>
        <% price = (cart.item.price*1.1).round * cart.count %>
        <%= price %>
      </td>
      <td><%= link_to "削除する", cart_item_path(cart.id, cart.item_id), method: :delete, class: "btn btn-danger" %></td>
    </tbody>
    <% @sum += price %>
  <% end %>
</table>
<div class="row">
  <div class="">
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
  </div>
  <div class="">
    <table class="table table-bordered">
      <tr>
        <th>合計金額</th>
        <th><%= @sum %></th>
      </tr>
    </table>
  </div>
</div>
<div lcass="row">
  <%= link_to "情報入力に進む", new_order_path(current_customer), class: "btn btn-success ml-3" %>
</div>