<div class="row">
  <h3 class="ml-4">商品一覧</h3>
  <div class="card-deck">
    <% items.each do |item| %>
      <div class="col-md-6 mx-auto">
        <div class="card my-3 item-index">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "mizuho4141396IMG_7893_TP_V.jpg", class: "card-img-top show-card", alt: "商品イメージ", size: "280x180" %>
          <% end %>
          <div class="card-body">
            <p class="card-title item-name"><%= link_to item.name, item_path(item) %></p>
            <p class="card-text"><%= ((item.price * 1.1).round).to_s(:delimited) %> 円</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate items %>