<div class="container my-5">
  <h4>商品詳細</h4>
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, :fill, 50, 50, fallback: "mizuho4141396IMG_7893_TP_V.jpg", class: "", alt: "商品イメージ", width: "100%"%>
    </div>
    <div class="col-md-6 offset-md-2">
      <div class="row">
        <p>商品名</p>
        <p><%= @item.name %></p>
      </div>
      <div class="row">
        <p>商品説明</p>
        <p><%= @item.description %></p>
      </div>
      <div class="row">
        <p>ジャンル</p>
        <p><%= @item.genre.name %></p>
      </div>
      <div class="row">
        <p>税込価格<br/>(税抜価格)</p>
        <p><%= (@item.price * 1.1).round %> (<%= @item.price %>)円</p>
      </div>
      <div class="row">
        <p>販売ステータス</p>
        <% if @item.is_active == true %>
          <p>販売中</p>
        <% else %>
          <p>販売停止中</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success mx-auto" %>
  </div>
</div>