<div class="header">
  <%= render "layouts/header" %>
</div>
<%= render 'layouts/flash' %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container my-4">
    <div class="row">
      <h2>管理者ログイン</h2>
      <div class="field form-group col-12">
        <%= f.label :"メールアドレス", class: "col-3 control-label" %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-7 form-control-static" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :"パスワード", class: "col-3 control-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-3 form-control-static" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :" ", class: "col-3 control-label" %>
        <%= f.submit "Log in", class:"btn btn-info col-2" %>
      </div>
    </div>
  </div>
<% end %>