<div class="container">
  <h4>ジャンル一覧・追加</h4>
  <div class="row">
    <div class="mx-auto">
      <p>ジャンル名</p>
      <%= form_with model: [:admin, @genre], local: true do |f| %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-6 mt-5 mx-auto">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>