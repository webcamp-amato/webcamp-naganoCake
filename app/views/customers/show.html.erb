<div class="container">
  <div class="row justify-content-center">
  	<div class= "col-xs-offset-1 col-10 mt-3">
  		<h2 class="head-line text-center title_h2">マイページ</h2>
  		<p><strong><i class="far fa-user"></i> 登録情報</strong>
  			<%= link_to " 編集する", edit_customer_path, class: "btn btn-success" %>
  		</p>

  			<table class="table table-striped table-condensed" >
  				<tbody>
  					<tr>
  						<td class="info col-xs-2">氏名</td>
  						<td class="text-left"><%= full_name(current_customer) %></td>
  					</tr>
  					<tr>
  						<td class="info">カナ</td>
  						<td class="text-left"><%= full_name_kana(current_customer) %></td>
  					</tr>
  					<tr>
  						<td class="info">郵便番号</td>
  						<td class="text-left"><%= @customer.postcode %></td>
  					</tr>
  					<tr>
  						<td class="info">住所</td>
  						<td class="text-left"><%= @customer.address %></td>
  					</tr>
  					<tr>
  						<td class="info">電話番号</td>
  						<td class="text-left"><%= @customer.phone_number %></td>
  					</tr>
  					<tr>
  						<td class="info border-bottom">メールアドレス</td>
  						<td class="text-left border-bottom"><%= @customer.email %></td>
  					</tr>
  				</tbody>
  			</table>

  			<div>
  				<p><strong><i class="fas fa-truck-moving"></i> 配送先</strong>
  					<%= link_to " 一覧を見る", delivery_places_path, class: "btn btn-info" %>
  				</p>
  				<p><strong><i class="fas fa-history"></i> 注文履歴</strong>
  					<%= link_to " 一覧を見る", orders_path(@customer.id), class: "btn btn-info" %>
  				</p>
  			</div>
  	</div>
  </div>
</div>