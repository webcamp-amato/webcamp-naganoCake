<div class="header">
      <%= render "layouts/header" %>
    </div>
<div class="row mb-3">
  <h4>ショッピングカート</h4>
  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger ml-auto" %>
</div>
<table class="table table-bordered">
  <thead>
    <tr class="cart-thead">
      <th class="cart-name">商品名</th>
      <th class="cart-price">単価(税込)</th>
      <th class="cart-count">数量</th>
      <th class="cart-total">小計</th>
      <th class="cart-destroy"></th>
    </tr>
  </thead>
  <% cart_items.each do |cart| %>
    <tbody>
      <td>
        <%= attachment_image_tag cart.item, :image, :fill, 50, 50, fallback: "mizuho4141396IMG_7893_TP_V.jpg", alt: "商品イメージ", width: "20%"%>
        <%= cart.item.name %>
      </td>
      <td><%= (cart.item.price*1.1).round %></td>
      <td>
        <%= form_with model: cart, local: true do |f| %>
          <div class="form-group row">
            <% number = (1..100).to_a %>
            <%= f.select :count, number %>
            <%= f.submit "変更", class:"btn btn-success d-inline^block" %>
          </div>
        <% end %>
      </td>
      <td>
        <% price = (cart.item.price*1.1).round * cart.count %>
        <%= price %>
      </td>
      <td><%= link_to "削除する", cart_item_path(cart.id, cart.item_id), method: :delete, class: "btn btn-danger" %></td>
    </tbody>
    <% @sum += price %>
  <% end %>
</table>
<div class="row mx-auto">
  <div class="">
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
  </div>
  <div class="ml-auto">
    <table class="table table-bordered">
      <tr>
        <th>合計金額</th>
        <th><%= @sum %><span class="yen">円</span></th>
      </tr>
    </table>
  </div>
</div>
<div class="cart-btn">
  <%= link_to "情報入力に進む", new_order_path(current_customer), class: "btn btn-success" %>
</div>