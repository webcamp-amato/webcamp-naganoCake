<div class="header">
  <%= render "layouts/header" %>
</div><div class="container">
  <h2 class="head-line title_h2 text-center">会員一覧</h2>
  <div class="row">
    <div class="col-12">
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr class="info">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td class="info col-2">
                <%= customer.id %>
              </td>
              <td class="text-left col-3">
                <%= link_to admin_customer_path(customer), class: "btn-link" do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td class="text-left col-4">
                <%= customer.email %>
              </td>
              <td class="col-3">
                <% if customer.is_deleted == false %>
                  <p class="text-success"><i class="fas fa-user-check"></i> 有効</p>
                <% else %>
                  <p class="text-danger"><i class="fas fa-user-slash"></i> 退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>