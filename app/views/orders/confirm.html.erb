<div class="header">
  <%= render "layouts/header" %>
</div>
<% if @cart_items.exists? %>
  <%= render "confirm", cart_items: @cart_items, order: @order, sum: @sum %>
<% else %>
  <div class="box">
    <div class="container">
      <div>
        <h2 class="text-center mt-4">
          読み込み直しましたので、<br/>
          再度入力画面からお願いします。
        </h2>
      </div>
      <div class="text-center my-4">
        <%= link_to "情報入力へ戻る", new_order_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>