

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <h2>管理者登録</h2>
      <div class="field form-group col-12">
        <%= f.label :"メールアドレス", class: "col-3 control-label" %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-7 form-control-static" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :"パスワード", class: "col-2 control-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-3 form-control-static" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :"パスワード（確認用）", class: "col-3 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3 form-control-static" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :" ", class: "col-3 control-label" %>
        <%= f.submit "新規登録", class:"btn btn-success col-2" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
</div>
