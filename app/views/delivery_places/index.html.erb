<div class="header">
  <%= render "layouts/header" %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 justify-content-center">
      <h2 class="mt-3 text-center title_h2 mb-4">配送先登録</h2>
      <%= form_with model: @delivery_place, url: delivery_places_path, remote:true do |f| %>
        <div class="col-12">
          <div class="form-inline form-group col-12">
            <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-3 control-label" %>
            <%= f.text_field :postcode, class: "col-3 form-control" %>
          </div>
          <div class="form-inline form-group col-12">
            <%= f.label :"住所" ,class: "col-3 control-label" %>
            <%= f.text_field :address, class: "col-7 form-control" %>
          </div>
          <div class="form-inline form-group col-12">
            <%= f.label :"宛名" ,class: "col-3 control-label" %>
            <%= f.text_field :addressee, class: "col-3 form-control" %>
            <div class="form-inline form-group col-3 ml-auto">
              <%= f.submit '新規登録' ,class: "col-12 btn btn-success" %>
            </div>
          </div>

        </div>
      <% end %>
    </div>
    <h2 class="mt-3 text-center title_h2 col-10 mb-4">配送先一覧</h2>
    <div class="delivery_places_index col-10">
      <%= render "dp_index", delivery_places: @delivery_places %>
    </div>
  </div>
</div>