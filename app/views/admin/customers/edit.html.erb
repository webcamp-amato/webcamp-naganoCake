<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="head-line title_h2 text-center"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
      <%= form_with model:@customer, url:admin_customer_path, method: :patch, local: true do |f| %>
        <div class="col-10">
          <div class="form-group col-12">
            <%= f.label :"会員ＩＤ", class: "col-sm-3 control-label" %>
            <%= @customer.id %>
          </div>
          <div class="form-group col-12">
            <%= f.label :"氏名", class: "col-sm-3 control-label" %>
            <%= f.text_field :last_name, class: "col-sm-3 form-control-static" %>
            <%= f.text_field :first_name, class: "col-sm-3 form-control-static" %>
          </div>
          <div class="form-group col-12">
            <%= f.label :"フリガナ", class: "col-3 control-label" %>
            <%= f.text_field :last_name_kana, class: "col-sm-3 form-control-static" %>
            <%= f.text_field :first_name_kana, class: "col-sm-3 form-control-static" %>
          </div>
          <div class="form-group col-12">
            <%= f.label :"郵便番号", class: "col-3 control-label" %>
            <%= f.text_field :postcode, class: "col-2 form-control-static" %>
          </div>
          <div class="form-group col-12">
            <%= f.label :"住所", class: "col-3 control-label" %>
            <%= f.text_field :address, class: "col-7 form-control-static" %>
          </div>
          <div class="form-group col-12">
            <%= f.label :"電話番号(ハイフンなし)", class: "col-3 control-label" %>
            <%= f.text_field :phone_number, class: "col-2 form-control-static" %>
          </div>
          <div class="form-group col-12">
            <%= f.label :"メールアドレス", class: "col-3 control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6 form-control-static" %>
          </div>
          <div class="form-group col-12">
            <%= f.label :"会員ステータス", class: "col-3 control-label" %>
            <% if @customer.is_deleted == false %>
              <%= f.radio_button :is_deleted, false, name:"is_deleted", checked: true %>
            　<%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;", class:"fas fa-user-check text-success"} %>
            　<%= f.radio_button :is_valid, true, name:"is_deleted" %>
            　<%= f.label :is_valid, "退会", {value: :false, style: "display: inline-block;", class:"fas fa-user-slash text-danger"} %>
            <% else %>
              <%= f.radio_button :is_deleted, false, name:"is_deleted" %>
            　<%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;", class:"fas fa-user-check text-success"} %>
            　<%= f.radio_button :is_valid, true, name:"is_deleted", checked: true %>
            　<%= f.label :is_valid, "退会", {value: :false, style: "display: inline-block;", class:"fas fa-user-slash text-danger"} %>
            <% end %>
          </div>
        </div>

        <div class="actions col-9 text-right">
          <%= f.submit "編集内容を保存", class: "btn btn-success col-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>