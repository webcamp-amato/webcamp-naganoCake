<section id="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-6 border mt-5 bg-light text-dark rounded">
          <h2 class="field form-group col-12 mt-3 bg-info text-light"><i class="fas fa-sign-in-alt"></i> ログイン</h2>
          <h4 class="field form-group col-12"> 会員の方はこちらからログイン</h4>
          <div class="form-inline form-group col-12 justify-content-center">
            <%= f.label :"メールアドレス", class: "col-4 form-label" %>
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-6 form-control" %>
          </div>

          <div class="form-inline form-group col-12 justify-content-center">
            <%= f.label :"パスワード", class: "col-4 form-label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-6 form-control" %>
          </div>

          <div class="field form-group col-12">
            <%= f.submit " 》ログイン", class: "btn btn-info col-4" %>
          </div>

          <div class="field form-group col-12 pt-3 border-top border-primary">
            <h4>会員登録がお済みでない方</h4>
            <div>
              <%= link_to " こちら", new_customer_registration_path, class:"col-3" %> から新規登録を行って下さい。
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>

