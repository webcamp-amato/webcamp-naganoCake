  <table border="1">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <% orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        〒<%= order.postcode %><br>
        <%= order.address %><br>
        <%= order.addressee %>
      </td>
      <td>
        <% order.order_items.each do |order_item| %>
          <%= order_item.item.name %><br>
        <% end %>
      </td>
      <td><%= order.total_price %></td>
      <td><%= order.status[1] %></td>
      <td>
        <%= link_to order_path(order.id) do %>
        <span class="btn btn-sm btn-primary">表示する</span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
  
  <%= paginate orders %>
  