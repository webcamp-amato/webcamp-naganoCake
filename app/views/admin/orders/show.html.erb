<div class="header">
  <%= render "layouts/header" %>
</div>
<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="table-responsive">
    <table class="table table-borderd">
      <tr>
        <th>購入者</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.postcode%><%= @order.address %><br>
          <%= @order.addressee %>
        </td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <!--ステータス表記がわからない-->
          <%= form_with model: @order, url:admin_order_path, method: :patch, local: true do |f| %>
          <br>

          <%= f.select :status, Order.statuses.keys.to_a %>
          <%= f.submit "更新", class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div>
      <table class="table">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= (order_item.item.price * 1.1).round %></td>
          <td><%= order_item.count %></td>
           <% subtotal = (order_item.item.price * 1.1).round * order_item.count %>
          <td><%= subtotal %></td>
           <% @sum += subtotal %>
          <td>
            <!--ステータス表記がわからない-->
             <%= form_with model: order_item, url:admin_order_item_path(order_item.id), method: :patch, local: true do |f| %>
            <br>

            <%= f.select :status, OrderItem.statuses.keys.to_a %>
            <%= f.submit "更新", class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <div>
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th>
          <td><%= @sum %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <% @order.total_price = @order.postage + @sum %>
          <td><%= @order.total_price %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>