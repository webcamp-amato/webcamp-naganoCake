<div class="container">

  <h2>注文情報確認</h2>
  <table>
      <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
      </tr>
      
    <% @cart_items.each do |cart_item| %>
      <tr>
          <td>
            <!--<%= attachment_image_tag cart_item, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>-->
            <%= cart_item.name %>
          </td>
          <td><%= cart_item.add_tax_price %></td>
          <td><%= cart_item.count %></td>
          <td><%= cart_item.subtotal %></td>
          <%= @sum +=  cart_item.subtotal %>
      </tr>
    <% end %>
  </table>
  
  <table>
    <tr>
      <th>送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%= @sum %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td><%= (@order.postage + @sum) %></td>
    </tr>
  </table>

  <span>支払方法　</span><%= @order.payment_method %>
  <br>
  <span>お届け先　</span>〒<%= @order.postcode %><%= @order.address %><%= @order.addressee %>
</div>