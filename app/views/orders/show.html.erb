<div class="container">
  
  <h3>注文履歴詳細</h3>
  
  <h4>注文情報</h4>
  <table border="1">
     <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    
    <tr>
      <th>配送先</th>
      <td>
        〒<%= @order.postcode%><%= @order.address %><br>
        <%= @order.addressee %>
      </td>
    </tr>
    
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    
     <tr>
      <th>ステータス</th>
      <td>
        <%= @order.status %>
      </td>
    </tr>
  </table>
  
  <h4>注文内容</h4>
  <table border="1">
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
     <% @order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= (order_item.item.price * 1.1).round %></td>
      <td><%= order_item.count %></td>
       <% subtotal = (order_item.item.price * 1.1).round * order_item.count %>
      <td><%= subtotal %></td>
       <% @sum += subtotal %>
    </tr>
    <% end %>
  </table>
  
  <h4>請求情報</h4>
  <table border="1">
    <tr>
      <th>商品合計</th>
      <td><%= @sum %>円</td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %>円</td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <% @order.total_price = @order.postage + @sum %>
      <td><%= @order.total_price %>円</td>
    </tr>
  </table>
</div>